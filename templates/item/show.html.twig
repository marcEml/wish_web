{% extends 'base.html.twig' %}

{% block title %}{{item.name}} | Wish{% endblock %}

{% block stylesheets %}
<style>
 .container {
  max-width: 800px;
  margin: 20px auto;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  background-color: #14223c;
 }

 h1 {
  color: #FFFFFF;
  text-align: center;
 }
</style>
{% endblock %}

{% block nav %}
  {% include 'navbar.html.twig' %}
{% endblock %}

{% block body %}
<div class="card container"> 
    <div class="card-header">
        <h1>{{ item.name }}</h1>
    </div>

    <div class="card-body bg-white">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ item.id }}</td>
                </tr>
                <tr>
                    <th>Nom de l'item</th>
                    <td>{{ item.name }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ item.price }}</td>
                </tr>
                <tr>
                    <th>Lien externe</th>
                    <td class="text-break"><a target="blank" href="{{ item.externalLink }}" class="link-opacity-100">{{ item.externalLink }}</a></td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ item.description }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-white d-flex justify-content-between align-items-center">
        <div>
            <a class="btn btn-secondary me-2" href="{{ path('app_item_index', {'id': wishListId}) }}">Retourner Ã  la liste</a>
            <a class="btn btn-warning" href="{{ path('app_item_edit', {'id': item.id, 'wId': wishListId}) }}">Modifier</a>
        </div>
    </div>
</div>
{% endblock %}
