{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block nav %}
  {% include 'navbar.html.twig' %}
{% endblock %}

{% block body %}
   <div class="p-4 w-50 m-auto">
    <h1>{{ item.name }}</h1>

    <table class="table ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ item.price }}</td>
            </tr>
            <tr>
                <th>ExternalLink</th>
                <td>{{ item.externalLink }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_item_index', {'id': wishListId}) }}">Retourner Ã  la liste</a>

    <a class="btn btn-warning" href="{{ path('app_item_edit', {'id': item.id, 'wId': wishListId}) }}">Modifier</a>

    <form method="post" action="{{ path('app_item_delete', {'id': item.id, 'wId': wishListId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
        <button class="btn btn-danger mt-4">Supprimer</button>
    </form>
   </div>
{% endblock %}
