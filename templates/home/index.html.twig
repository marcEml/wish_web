{% extends 'base.html.twig' %}

{% block title %}Dashboard | Wish{% endblock %}

{% block stylesheets %}
  <style>
    .dashboard-layout {
      display: grid;
      grid-template-columns: 2fr 2fr 1fr;
      gap: 1em;
      min-height: 100svh;
      width: 100%;
      padding: 1em;
    }

    .dashboard-section {
      height: 100%;
      background-color: #edf3f4;
    }

    .wishlists-section {
      grid-column: span 2;
    }

    .dashboard-section-title {
      background-color: #14223c;
      color: white;
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      text-align: center;
      padding: 1em;
    }

    .dashboard-section-title h2 {
      margin: 0;
      text-align: center;
    }

    .invitations-wrapper {
      height: 100%;
      padding: 1em;
      display: flex;
      flex-direction: column;
      gap: 1em;
    }

    .wishlists-wrapper {
      height: 100%;
      padding: 1em;
      display: flex;
      flex-direction: column;
      gap: 1em;
    }

    .wishlist-row{
        display: flex;
        gap: 1em;
        width: 100%;
    }

    .wishlist-row-between {
      display: flex;
      width: 100%;
      justify-content: space-between;
      align-items: center;
    }
  </style>
{% endblock %}

{% block nav %}
  {% include 'navbar.html.twig' %}
{% endblock %}

{% block body %}
  <div class="dashboard-layout">
    <section class="dashboard-section wishlists-section">
      <div class="dashboard-section-title">
        <h2>Wishlists</h2>
        <div>
          <a class="btn btn-success" href="{{ path('app_wishlist_new') }}">Créer une wishlist</a>
          <a class="btn btn-warning" href="{{ path('app_membership_index') }}">Inviter à une wishlist</a>
        </div>
      </div>
      <div class="wishlists-wrapper">
        {% if own_wishlists|length > 0 or accepted_wishlists|length > 0 %}
          <div class="row">
            <div class="col-md-6">
              <div class="card">
                <div class="card-header">
                  <h3>Mes wishlists</h3>
                </div>
                <div class="card-body">
                  {% for wishlist in own_wishlists %}
                    <div class="card mb-3">
                      <div class="card-body">
                        <div class="wishlist-row-between">
                            <h5 class="card-title">{{ wishlist.title }}</h5>
                            {{ include('wishlist/_delete_form.html.twig') }}
                        </div>
                        <p class="card-text">
                          Créée par vous
                        </p>
                        <div class="wishlist-row"> 
                          <a href="{{ path('app_item_index', {'id': wishlist.id}) }}" class="btn btn-success">
                            <svg
                             xmlns="http://www.w3.org/2000/svg"
                             width="24"
                             height="24"
                             viewBox="0 0 24 24"
                             fill="none"
                             stroke="currentColor"
                             stroke-width="2"
                             stroke-linecap="round"
                             stroke-linejoin="round"
                             class="lucide lucide-gift"
                             style="margin-right: 0.25em;"
                            >
                             <rect x="3" y="8" width="18" height="4" rx="1" />
                             <path d="M12 8v13" />
                             <path d="M19 12v7a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2v-7" />
                             <path d="M7.5 8a2.5 2.5 0 0 1 0-5A4.8 8 0 0 1 12 8a4.8 8 0 0 1 4.5-5 2.5 2.5 0 0 1 0 5" />
                            </svg>
                            Voir les cadeaux
                          </a>   

                            {{ include('wishlist/_edit_button.html.twig') }}
                          
                            <a href="{{ path('app_sharing', {'id': wishlist.id}) }}" class="btn btn-primary">
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-share"
                                style="margin-right: 0.25em;"
                              >
                                <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8" />
                                <polyline points="16 6 12 2 8 6" />
                                <line x1="12" x2="12" y1="2" y2="15" />
                              </svg>
                              Partager
                            </a>
                        </div>
                      </div>
                    </div>
                  {% endfor %}
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="card">
                <div class="card-header">
                  <h3>Wishlists partagées</h3>
                </div>
                <div class="card-body">
                  {% for wishlist in accepted_wishlists %}
                    <div class="card mb-3">
                      <div class="card-body">
                        <h5 class="card-title">{{ wishlist.title }}</h5>
                        <p class="card-text">
                          Créée par {{ wishlist.user.firstName }}
                          {{ wishlist.user.lastName }}
                        </p>
                        <div class="wishlist-row">
                            {{ include('wishlist/_view_button.html.twig') }}
                            {{ include('wishlist/_edit_button.html.twig') }}
                            {{ include('wishlist/_share_button.html.twig') }}
                        </div>
                      </div>
                    </div>
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
        {% else %}
          <p>Vous n'avez pas encore de wishlist... Commencez à offrir des cadeaux!</p>
        {% endif %}
      </div>
    </section>

    <section class="dashboard-section">
      <div class="dashboard-section-title">
        <h2>Invitations</h2>
      </div>
      <div class="invitations-wrapper">
        {% for membership in memberships %}
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                Invitation à la wishlist : {{ membership.wishlist.title }} (ID #{{
                membership.wishlist.id
              }})
              </h5>
              <p class="card-text">
                {{ membership.wishlist.user.firstName }} {{
                membership.wishlist.user.lastName
              }}
                vous a invité à sa wishlist!
              </p>
              {{ include('membership/_accept_button.html.twig') }}
              {{ include('membership/_decline_button.html.twig') }}
            </div>
          </div>
        {% else %}
          <p>Pas d'invitations en attente de réponse.</p>
        {% endfor %}
      </div>
    </section>
  </div>
{% endblock %}
