{% extends 'base.html.twig' %}

{% block title %}Hello AuthenticationController!{% endblock %}

{% block body %}
<style>
    body {
        width: 100vw;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: "#FCFCFC";

        background: white;
        background-size: 20px 20px;
        background-position: -19px -19px;
        background-image: radial-gradient(#EEE 1px, transparent 0);
    }
    section {
        width: 520px;
        height: auto;
        background-color: white;
        box-shadow: 0px 0px 16px #EEE;

        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: center;

        gap: 44px;
        padding: 52px 64px;
        border-radius: 30px;
    }
    .title {
        font-size: 28px;
        font-weight: bold;
    }
    .subtitle {
        font-size: 14px;
        font-weight: regular;
        color: #494949;
    }
    .title--container{
        gap: 10px;
        width: 100%;
        display: flex;
        flex-direction: column;
    }
    form {
        gap: 44px;
        width: 100%;
        display: flex;
        flex-direction: column;
    }
    form div {
        gap: 16px;
        display: flex;
        flex-direction: column;
    }
    input {
        width: 100%;
        height: 40px;
        border: none;
        outline: none;
        padding: 8px 16px;
        border-radius: 40px;
        background-color : #F4F4F5;
    }
    .agreement {
        font-size: 14px;
        color: #494949;
        margin-top: 44px;
        text-align: center;
        font-weight: regular;
    }
    button {
        width: 100%;
        color: white;
        border: none;
        cursor: pointer;
        font-size: 14px;
        padding: 10px 16px;
        border-radius: 40px;
        background-color: #00B8DE;
    }
    p a {
        color: #00B8DE;
    }
    .title--container h2 {
        text-align: left;
    }
    @media screen and (max-width: 520px) {
        body {
            background: white;
            background-size: 0px;
            background-color: white;
        }
        section {
            box-shadow: none;
        }
    }
</style>

<div class="example-wrapper">
    <section>
        <div class="title--container">
            <h2 class="title">Connectez vous Ã  wish</h2>
            <p class="subtitle">Entrez vos identifiants pour vous connecter.</p>
        </div>

        <form method="POST" action="{{ path('app_authentication_login') }}">
            <div>
                <input autocomplete="off" type="email" id="email" name="email" placeholder="Adresse e-mail">
                <input autocomplete="off" type="password" id="password" name="password" placeholder="Mot de passe">
            </div>

            <button>Se connecter</button>
        </form> 
    </section>

    <p class="agreement">Vous n'avez pas de compte ? <a href="/authentication/signin">inscrivez-vous</a></p>
</div>

{% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}
{% endblock %}
