{% extends 'base.html.twig' %}

{% block title %}
Top 3 des listes de souhaits selon la valeur totale des cadeaux achetés
{% endblock %}

{% block body %}

<nav class="admin-menu">
    <a href="{{ path('app_home') }}" class="back-to-home">
        Retour à l'accueil
    </a>

    <div class="dropdown"> 
        <button class="dropbtn">
            Ranking Option
            <span class="triangle">▲</span> 
        </button>
        <div class="dropdown-content">  
            <a href="{{ path('top3_items') }}">
                Les 3 articles les plus chers achetés pour une liste de souhaits
            </a>               
            <a href="{{ path('top3_wishlists') }}">
                Top 3 des listes de souhaits selon la valeur totale des cadeaux achetés
            </a>
        </div>
    </div>

</nav>

<h2> Top 3 des listes de souhaits selon la valeur totale des cadeaux achetés</h2>



<div class="top3-wishlists">

    <!-- Second -->
    <div class="wishlist-rank">
        <div class="wishlist-value">
            Top-2 value: {{ top3Wishlists[1].totalValue }}€
        </div>
        <div class="wishlist-bar bar2">
            2
        </div>
        <div class="wishlist-link">
            <a href="{{ path('app_item_index', { id: top3Wishlists[1].wishlist.id }) }}">Cliquez pour plus de détails</a>
        </div>
    </div>

    <!-- First -->
    <div class="wishlist-rank">
        <div class="wishlist-value">
            Top-1 value: {{ top3Wishlists[0].totalValue }}€
        </div>
        <div class="wishlist-bar bar1">
            1
        </div>
        <div class="wishlist-link">
            <a href="{{ path('app_item_index', { id: top3Wishlists[0].wishlist.id }) }}">Cliquez pour plus de détails</a>
        </div>
    </div>

    <!-- Third -->
    <div class="wishlist-rank">
        <div class="wishlist-value">
            Top-3 value: {{ top3Wishlists[2].totalValue }}€
        </div>
        <div class="wishlist-bar bar3">
            3
        </div>
        <div class="wishlist-link">
            <a href="{{ path('app_item_index', { id: top3Wishlists[2].wishlist.id }) }}">Cliquez pour plus de détails</a>
        </div>
    </div>
</div>


<style>
    .top3-wishlists {
        display: flex;
        justify-content: center;   
        align-items: flex-end;     
        gap: 2rem;                 
        margin-top: 2rem;
    }

    .wishlist-rank {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .wishlist-value {
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .wishlist-bar {
        background-color: #8DC63F; 
        color: #fff;
        font-weight: bold;
        font-size: 1.5rem;
        width: 80px;              
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.5rem;
    }

    
    .bar1 {
        height: 180px; 
    }
    .bar2 {
        height: 120px; 
    }
    .bar3 {
        height: 90px;  
    }

    .wishlist-link a {
        color: #007bff;
        text-decoration: underline;
    }
    .admin-menu {
        margin-bottom: 1rem; 
    }

    
    .dropdown {
        position: relative;
        display: inline-block; 
    }

    
    .dropbtn {
        background-color: #0088cc; 
        color: #fff;
        padding: 8px 16px;
        font-size: 16px;
        border: none;
        cursor: pointer;
        outline: none;
    }

    
    .triangle {
        font-size: 12px;
        margin-left: 8px;
    }

    
    .dropdown-content {
        display: none;
        position: absolute;     
        background-color: #fff;
        min-width: 300px;       
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        z-index: 999;           
    }

    
    .dropdown-content a {
        display: block;
        color: #333;
        padding: 12px 16px;
        text-decoration: none;
        white-space: nowrap; 
    }

    
    .dropdown-content a:hover {
        background-color: #f1f1f1;
    }

    
    .dropdown:hover .dropdown-content {
        display: block;
    }

    
    .dropdown:hover .dropbtn {
        background-color: #006699;
    }

    .back-to-home {
        display: inline-block;       
        background-color: #0088cc;
        color: #fff;
        padding: 8px 16px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        text-decoration: none;       
        margin-bottom: 1rem;         
        cursor: pointer;
    }
    .back-to-home:hover {
        background-color: #006699;
    }
</style>
{% endblock %}
