{% extends 'base.html.twig' %}

{% block title %}Invitations à vos wishlists | Wish{% endblock %}

{% block stylesheets %}
<style>
 .container {
  max-width: 800px;
  margin: 20px auto;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  background-color: #14223c;
 }

 h1 {
  color: #FFFFFF;
  text-align: center;
 }
</style>
{% endblock %}

{% block nav %}
  {% include 'navbar.html.twig' %}
{% endblock %}

{% block body %}
<div class="card container">
    <div class="card-header"> 
        <h1>Invitations à vos wishlists</h1>
    </div>

    <div class="card-body bg-white">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Statut</th>
                    <th>Wishlist</th>
                    <th>Utilisateur</th>
                </tr>
            </thead>
            <tbody>
                {% for membership in memberships %}
                <tr>
                    <td>{% include 'membership/_status_badge.html.twig' with { 'status': membership.status } only %}</td>
                    <td>
                        <p>{{membership.wishlist.title}}</p>
                    </td>
                    <td>
                        <p>{{membership.user.lastname}} {{ membership.user.firstname }}</p>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="3">Vous n'avez envoyé aucune invitation pour le moment.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    <div class="card-footer bg-white">
    <a class="btn btn-secondary" href="{{ path('app_home') }}">Retourner à l'accueil</a>
        <a class="btn btn-success float-end" href="{{ path('app_membership_new') }}">Créer une invitation</a>
    </div>
</div>
{% endblock %}
